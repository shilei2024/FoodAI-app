<!--components/food-card/index.wxml-->
<view class="food-card" bindtap="onTap">
  <!-- 食物图片 -->
  <view class="food-image-container">
    <image 
      wx:if="{{food.image}}"
      class="food-image" 
      src="{{food.image}}" 
      mode="aspectFill"
      binderror="onImageError"
    />
    <view wx:else class="food-image-placeholder">
      <van-icon name="photo-o" size="40" color="#c8c9cc" />
    </view>
    <!-- 置信度标签 -->
    <view wx:if="{{confidenceText}}" class="confidence-badge">
      {{confidenceText}}
    </view>
  </view>
  
  <!-- 食物信息 -->
  <view class="food-info">
    <view class="food-name">{{food.foodName || '未知食物'}}</view>
    <view class="food-calories">
      <van-icon name="fire-o" size="14" color="#ff6b6b" />
      <text class="calories-value">{{food.calories || 0}}</text>
      <text class="calories-unit">千卡/100g</text>
    </view>
  </view>
</view>
