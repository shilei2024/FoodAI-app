/* components/food-card/index.wxss */
.food-card {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.food-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

/* 卡片图片区域 */
.card-image {
  position: relative;
  height: 200rpx;
  overflow: hidden;
}

.card-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.favorite-btn {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

/* 卡片内容区域 */
.card-content {
  padding: 25rpx;
}

/* 食物基本信息 */
.food-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.food-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.food-calories {
  font-size: 24rpx;
  color: #ff976a;
  font-weight: 500;
  margin-left: 20rpx;
}

/* 食物标签 */
.food-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 15rpx;
}

/* 额外信息 */
.food-extra {
  display: flex;
  gap: 20rpx;
  margin-bottom: 15rpx;
}

.extra-text {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #999;
}

.extra-text van-icon {
  margin-right: 5rpx;
}

/* 操作按钮 */
.card-actions {
  display: flex;
  gap: 15rpx;
  padding-top: 15rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .card-image {
    height: 180rpx;
  }
  
  .card-content {
    padding: 20rpx;
  }
  
  .food-name {
    font-size: 28rpx;
  }
  
  .food-calories {
    font-size: 22rpx;
  }
  
  .extra-text {
    font-size: 20rpx;
  }
}

/* 卡片变体样式 */
.food-card.compact {
  display: flex;
  align-items: center;
}

.food-card.compact .card-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin: 20rpx;
}

.food-card.compact .card-content {
  flex: 1;
  padding: 20rpx 20rpx 20rpx 0;
}

.food-card.compact .food-info {
  margin-bottom: 10rpx;
}

.food-card.compact .food-tags,
.food-card.compact .food-extra {
  margin-bottom: 10rpx;
}

.food-card.compact .card-actions {
  padding-top: 10rpx;
}
