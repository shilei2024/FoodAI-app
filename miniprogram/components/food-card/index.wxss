/* components/food-card/index.wxss */
.food-card {
  display: flex;
  align-items: center;
  padding: 16rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.food-image-container {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  flex-shrink: 0;
  border-radius: 12rpx;
  overflow: hidden;
  background: #f5f5f5;
}

.food-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.food-image-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f5f7fa 0%, #e4e8eb 100%);
}

.confidence-badge {
  position: absolute;
  bottom: 4rpx;
  right: 4rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
}

.food-info {
  flex: 1;
  margin-left: 20rpx;
  overflow: hidden;
}

.food-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.food-calories {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

.calories-value {
  margin-left: 8rpx;
  font-weight: 600;
  color: #ff6b6b;
}

.calories-unit {
  margin-left: 4rpx;
  font-size: 22rpx;
  color: #999;
}
