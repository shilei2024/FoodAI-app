/* components/image-preview/index.wxss */

.image-preview-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #000000;
}

/* 图片容器 */
.image-container {
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  touch-action: none;
}

/* 加载状态 */
.loading-slot,
.error-slot {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  color: #ffffff;
}

.loading-text,
.error-text {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #ffffff;
}

/* 缩放指示器 */
.scale-indicator {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  background: rgba(0, 0, 0, 0.7);
  color: #ffffff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  z-index: 10;
}

/* 操作按钮 */
.action-buttons {
  padding: 32rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  background: rgba(0, 0, 0, 0.8);
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
}

.action-button {
  flex: 1;
  min-width: 160rpx;
}

.confirm-button {
  background: linear-gradient(135deg, #07c160 0%, #1989fa 100%);
  border: none;
}

/* 缩放控制 */
.scale-controls {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  width: 100%;
  margin: 16rpx 0;
}

.scale-button {
  width: 60rpx;
  height: 60rpx;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.scale-text {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
  min-width: 80rpx;
  text-align: center;
}

/* 手势提示 */
.gesture-hint {
  position: absolute;
  bottom: 200rpx;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx;
  background: rgba(0, 0, 0, 0.7);
  color: #ffffff;
  font-size: 24rpx;
  border-radius: 20rpx;
  margin: 0 32rpx;
  animation: fadeInOut 3s ease-in-out;
}

@keyframes fadeInOut {
  0%, 100% { opacity: 0; }
  20%, 80% { opacity: 1; }
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .action-buttons {
    padding: 24rpx;
    gap: 12rpx;
  }
  
  .action-button {
    min-width: 140rpx;
  }
  
  .scale-controls {
    margin: 12rpx 0;
  }
  
  .gesture-hint {
    bottom: 180rpx;
    margin: 0 24rpx;
  }
}

/* 暗色模式适配 */
@media (prefers-color-scheme: dark) {
  .image-preview-container {
    background: #1a1a1a;
  }
  
  .action-buttons {
    background: rgba(26, 26, 26, 0.9);
    border-top-color: rgba(255, 255, 255, 0.05);
  }
  
  .loading-slot,
  .error-slot {
    background: rgba(26, 26, 26, 0.7);
  }
  
  .scale-indicator {
    background: rgba(26, 26, 26, 0.8);
  }
  
  .gesture-hint {
    background: rgba(26, 26, 26, 0.8);
  }
}
