/* components/nutrition-chart/index.wxss */
.nutrition-chart {
  background: white;
  border-radius: 16rpx;
  padding: 25rpx;
}

/* 图表头部 */
.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
}

.chart-title {
  display: flex;
  align-items: center;
}

.chart-title text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-left: 10rpx;
}

/* 图表类型切换 */
.chart-type-switch {
  display: flex;
  background: #f5f7fa;
  border-radius: 8rpx;
  padding: 4rpx;
}

.type-item {
  padding: 8rpx 20rpx;
  font-size: 22rpx;
  color: #666;
  border-radius: 6rpx;
  transition: all 0.3s ease;
}

.type-item.active {
  background: white;
  color: #07c160;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 图表容器 */
.chart-container {
  position: relative;
  width: 100%;
}

.nutrition-canvas {
  width: 100%;
  height: 100%;
}

/* 空状态 */
.chart-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  color: #ccc;
}

.empty-text {
  font-size: 24rpx;
  margin-top: 15rpx;
  color: #999;
}


/* 图表说明 */
.chart-description {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  padding: 15rpx;
  background: #f0f7ff;
  border-radius: 8rpx;
}

.description-text {
  font-size: 22rpx;
  color: #1989fa;
  margin-left: 10rpx;
  flex: 1;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .nutrition-chart {
    padding: 20rpx;
  }
  
  .chart-title text {
    font-size: 26rpx;
  }
  
  .type-item {
    padding: 6rpx 15rpx;
    font-size: 20rpx;
  }
  
  .description-text {
    font-size: 20rpx;
  }
}
