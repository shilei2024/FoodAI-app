/* components/pay-wall/index.wxss */
.pay-wall {
  position: relative;
}

/* 付费墙弹窗 */
.pay-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.pay-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background: white;
  border-radius: 24rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 90vh;
  overflow-y: auto;
  position: relative;
  animation: modalSlideUp 0.3s ease;
}

@keyframes modalSlideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 关闭按钮 */
.close-btn {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: #f5f7fa;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

/* 付费内容 */
.pay-content {
  padding: 60rpx 40rpx 40rpx;
}

/* 标题 */
.pay-title {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.pay-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-left: 10rpx;
}

/* 功能描述 */
.feature-description {
  text-align: center;
  margin-bottom: 30rpx;
}

.feature-description text {
  font-size: 26rpx;
  color: #666;
}

/* 功能列表 */
.feature-list {
  background: #f9f9f9;
  border-radius: 16rpx;
  padding: 25rpx;
  margin-bottom: 30rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.feature-item:last-child {
  margin-bottom: 0;
}

.feature-item text {
  font-size: 24rpx;
  color: #333;
  margin-left: 10rpx;
  flex: 1;
}

/* 套餐选择 */
.plan-selection {
  margin-bottom: 30rpx;
}

.plan-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.plan-options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.plan-option {
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  padding: 25rpx;
  transition: all 0.3s ease;
  position: relative;
}

.plan-option.selected {
  border-color: #ff976a;
  background: #fff8f6;
}

.plan-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.plan-price {
  display: flex;
  align-items: baseline;
}

.price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff976a;
}

.period {
  font-size: 22rpx;
  color: #999;
  margin-left: 5rpx;
}

.plan-save {
  position: absolute;
  top: -10rpx;
  right: 20rpx;
  background: #ff976a;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

/* 支付按钮 */
.pay-actions {
  margin-bottom: 25rpx;
}

.secondary-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.action-link {
  font-size: 22rpx;
  color: #1989fa;
  text-decoration: underline;
}

/* 支付说明 */
.pay-notice {
  background: #f0f7ff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.pay-notice text {
  display: block;
  font-size: 22rpx;
  color: #1989fa;
  margin-bottom: 8rpx;
}

.pay-notice text:last-child {
  margin-bottom: 0;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .modal-content {
    width: 95%;
    max-width: none;
  }
  
  .pay-content {
    padding: 50rpx 30rpx 30rpx;
  }
  
  .pay-title text {
    font-size: 30rpx;
  }
  
  .feature-description text {
    font-size: 24rpx;
  }
  
  .feature-item text {
    font-size: 22rpx;
  }
  
  .plan-title {
    font-size: 26rpx;
  }
  
  .plan-option {
    padding: 20rpx;
  }
  
  .plan-name {
    font-size: 24rpx;
  }
  
  .price {
    font-size: 32rpx;
  }
  
  .period {
    font-size: 20rpx;
  }
  
  .action-link {
    font-size: 20rpx;
  }
  
  .pay-notice text {
    font-size: 20rpx;
  }
}
