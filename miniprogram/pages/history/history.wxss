/* pages/history/history.wxss */
.container {
  padding: 20rpx;
  background: #f5f7fa;
  min-height: 100vh;
}

/* 统计信息区域 */
.stats-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(102, 126, 234, 0.3);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.stat-item {
  text-align: center;
  padding: 20rpx 0;
}

.stat-value {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 10rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 筛选区域 */
.filter-section {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.filter-tabs {
  display: flex;
  justify-content: space-around;
}

.filter-tab {
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 30rpx;
  transition: all 0.3s ease;
}

.filter-tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-weight: 600;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-text {
  display: block;
  margin-top: 30rpx;
  font-size: 32rpx;
  color: #666;
  font-weight: 500;
}

.empty-hint {
  display: block;
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #999;
}

/* 历史记录区域 */
.history-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 历史记录列表 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.history-item {
  background: #fafbfc;
  border-radius: 16rpx;
  padding: 20rpx;
  transition: all 0.3s ease;
}

.history-item:active {
  transform: scale(0.98);
  background: #f0f2f5;
}

/* 额外信息 */
.item-extra {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx dashed #eee;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 12rpx;
}

.item-time {
  display: flex;
  align-items: center;
}

.time-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 8rpx;
}

.item-tags {
  display: flex;
  gap: 10rpx;
  flex: 1;
  justify-content: center;
}

.tag-item {
  margin: 0 4rpx;
}

.item-actions {
  display: flex;
  justify-content: flex-end;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx 0;
}

.no-more {
  font-size: 24rpx;
  color: #999;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .container {
    padding: 15rpx;
  }
  
  .stats-section,
  .history-section {
    padding: 20rpx;
  }
  
  .stat-value {
    font-size: 36rpx;
  }
  
  .stat-label {
    font-size: 22rpx;
  }
  
  .filter-tab {
    padding: 12rpx 24rpx;
    font-size: 26rpx;
  }
}
