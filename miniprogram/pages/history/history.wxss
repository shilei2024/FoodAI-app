/* pages/history/history.wxss */
.container {
  padding: 20rpx;
  background: #f5f7fa;
  min-height: 100vh;
}

/* 统计信息区域 */
.stats-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.stat-item {
  text-align: center;
  padding: 20rpx 0;
}

.stat-value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #07c160;
  margin-bottom: 10rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #666;
}

/* 筛选区域 */
.filter-section {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-text {
  display: block;
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #969799;
}

/* 历史记录区域 */
.history-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

/* 历史记录列表 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.history-item {
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 30rpx;
}

.history-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.item-info {
  margin-top: 20rpx;
  padding-left: 20rpx;
}

.item-time {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.item-time text {
  font-size: 24rpx;
  color: #666;
  margin: 0 10rpx 0 5rpx;
}

.item-tags {
  display: flex;
  gap: 10rpx;
  margin-bottom: 15rpx;
}

.item-actions {
  display: flex;
  justify-content: flex-end;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx 0;
}

.no-more {
  font-size: 24rpx;
  color: #999;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .container {
    padding: 15rpx;
  }
  
  .stats-section,
  .history-section {
    padding: 20rpx;
  }
  
  .stat-value {
    font-size: 32rpx;
  }
  
  .stat-label {
    font-size: 22rpx;
  }
}
