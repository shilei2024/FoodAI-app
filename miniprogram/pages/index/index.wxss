/* pages/index/index.wxss */
/* 简约高级风格，主色：#07c160 */

.page-container {
  width: 100vw;
  min-height: 100vh;
  background: #f8f9fa;
  display: flex;
  flex-direction: column;
}

/* 顶部标题区域 */
.header {
  background: linear-gradient(135deg, #07c160 0%, #05a854 100%);
  padding: 60rpx 40rpx 40rpx;
  color: white;
  text-align: center;
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(7, 193, 96, 0.2);
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

/* 主要内容区域 */
.main-content {
  flex: 1;
  padding: 40rpx;
  padding-bottom: 120rpx; /* 为底部导航留出空间 */
}

/* 拍照区域 */
.camera-section {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.camera-btn-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.camera-btn {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, #07c160 0%, #05a854 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  box-shadow: 0 12rpx 40rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.camera-btn:active {
  transform: scale(0.95);
  box-shadow: 0 6rpx 20rpx rgba(7, 193, 96, 0.2);
}

/* 相机图标 */
.camera-icon {
  position: relative;
  z-index: 2;
}

/* 闪烁效果 */
.pulse-effect {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  animation: pulse 2s infinite;
  z-index: 1;
}

@keyframes pulse {
  0% {
    transform: scale(0.8);
    opacity: 0.7;
  }
  50% {
    transform: scale(1.2);
    opacity: 0.3;
  }
  100% {
    transform: scale(0.8);
    opacity: 0.7;
  }
}

.camera-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 输入区域 */
.input-section {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

/* 输入框行 */
.input-row {
  margin-bottom: 32rpx;
}

.food-input {
  width: 100%;
  height: 96rpx;
  background: #f5f7fa;
  border-radius: 24rpx;
  padding: 0 40rpx;
  font-size: 32rpx;
  color: #333;
  border: 2rpx solid #e0e0e0;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-sizing: border-box;
  display: block;
}

.food-input:focus {
  border-color: #07c160;
  background: white;
  box-shadow: 0 0 0 4rpx rgba(7, 193, 96, 0.15);
  transform: translateY(-2rpx);
}

.placeholder {
  color: #999;
  font-size: 32rpx;
}

/* 搜索按钮行 */
.search-btn-row {
  display: flex;
  justify-content: flex-start; /* 左对齐 */
  margin-top: 24rpx;
  width: 100%;
}

/* 按钮外层容器 - 控制宽度 */
.search-btn-wrapper {
  width: 100%;
  display: flex;
}

/* Vant按钮自定义样式 */
.search-btn {
  width: 100% !important;
  min-width: 0 !important;
  max-width: 100% !important;
}

/* 覆盖Vant按钮内部样式 */
.search-btn-wrapper .van-button {
  width: 100% !important;
  height: 96rpx !important;
  border-radius: 24rpx !important;
  font-size: 34rpx !important;
  font-weight: 600 !important;
  letter-spacing: 8rpx !important; /* 增加字间距，让文字更舒适 */
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3) !important;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
  background: linear-gradient(135deg, #07c160 0%, #05a854 100%) !important;
  border: none !important;
  white-space: nowrap !important;
  overflow: hidden !important;
  text-overflow: ellipsis !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  box-sizing: border-box !important;
  padding: 0 60rpx !important; /* 增加左右内边距，让文字有更多空间 */
  min-width: 280rpx !important; /* 设置最小宽度，确保有足够空间 */
}

.search-btn-wrapper .van-button::after {
  border: none !important;
}

.search-btn-wrapper .van-button:active {
  transform: translateY(4rpx) scale(0.98) !important;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.2) !important;
}

/* 按钮文字样式 */
.search-btn-wrapper .van-button__text {
  white-space: nowrap !important;
  overflow: visible !important; /* 改为visible，让文字完整显示 */
  text-overflow: clip !important; /* 改为clip，不显示省略号 */
  letter-spacing: 8rpx !important; /* 增加字间距 */
  padding: 0 20rpx !important; /* 给文字添加额外内边距 */
  display: inline-block !important;
}

/* 按钮悬停效果（在支持hover的设备上） */
@media (hover: hover) {
  .search-btn-wrapper .van-button:hover {
    transform: translateY(-2rpx) !important;
    box-shadow: 0 12rpx 32rpx rgba(7, 193, 96, 0.35) !important;
  }
}

/* 热门标签 */
.hot-tags {
  margin-top: 24rpx;
}

.hot-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.food-tag {
  border-radius: 20rpx !important;
  background: #f0f9f4 !important;
  color: #07c160 !important;
  border: 1rpx solid #07c160 !important;
}

/* 结果展示区域 */
.result-section {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  animation: fadeIn 0.5s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.result-card {
  background: #f8f9fa;
  border-radius: 20rpx;
  overflow: hidden;
}

.food-image-container {
  position: relative;
  height: 300rpx;
  background: #e0e0e0;
}

.food-image {
  width: 100%;
  height: 100%;
}

.image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
}

.food-info {
  padding: 32rpx;
}

.food-name-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.food-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
}

/* 图片处理信息 */
.image-process-info {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 16rpx;
  margin: 16rpx 0;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.image-size {
  font-size: 24rpx;
  color: #999;
  background: #f5f7fa;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.food-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 32rpx;
  display: block;
}

.nutrition-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: white;
  border-radius: 16rpx;
}

.nutrition-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nutrition-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #07c160;
  margin-bottom: 8rpx;
}

.nutrition-label {
  font-size: 24rpx;
  color: #999;
}

.action-buttons {
  display: flex;
  gap: 24rpx;
}

.action-btn-container {
  display: flex;
  flex: 1; /* 按钮占据全部宽度 */
}

.action-btn {
  width: 100% !important;
  border-radius: 16rpx !important;
  white-space: nowrap;
}

/* 历史记录区域 */
.history-section {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.view-all {
  font-size: 28rpx;
  color: #07c160;
  margin-left: auto;
}

.history-scroll {
  white-space: nowrap;
  margin-top: 24rpx;
}

.history-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
  width: 160rpx;
}

.history-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

.history-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
}

.history-time {
  font-size: 24rpx;
  color: #999;
}

/* 底部导航 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 1000;
}

/* 全局加载动画 */
.global-loading {
  position: fixed !important;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(255, 255, 255, 0.9);
  padding: 40rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  z-index: 9999;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .main-content {
    padding: 32rpx;
  }
  
  .camera-btn {
    width: 180rpx;
    height: 180rpx;
  }
  
  .nutrition-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  /* 小屏幕调整输入框和按钮 */
  .food-input {
    font-size: 28rpx;
    padding: 0 32rpx;
    height: 84rpx;
    border-radius: 20rpx;
  }
  
  .search-btn-wrapper .van-button {
    height: 84rpx !important;
    font-size: 30rpx !important;
    border-radius: 20rpx !important;
    padding: 0 50rpx !important; /* 小屏幕适当减少内边距 */
    letter-spacing: 6rpx !important;
    min-width: 240rpx !important;
  }
  
  .search-btn-wrapper .van-button__text {
    letter-spacing: 6rpx !important;
    padding: 0 16rpx !important;
  }
}

/* 中等屏幕优化 */
@media (min-width: 375px) and (max-width: 413px) {
  .food-input {
    height: 92rpx;
    font-size: 30rpx;
  }
  
  .search-btn-wrapper .van-button {
    height: 92rpx !important;
    font-size: 32rpx !important;
    border-radius: 24rpx !important;
    padding: 0 55rpx !important;
    letter-spacing: 7rpx !important;
    min-width: 260rpx !important;
  }
  
  .search-btn-wrapper .van-button__text {
    letter-spacing: 7rpx !important;
    padding: 0 18rpx !important;
  }
}

/* 大屏幕优化 */
@media (min-width: 414px) {
  .camera-btn {
    width: 220rpx;
    height: 220rpx;
  }
  
  .food-input {
    height: 100rpx;
    font-size: 34rpx;
    padding: 0 44rpx;
    border-radius: 28rpx;
  }
  
  .search-btn-wrapper .van-button {
    height: 100rpx !important;
    font-size: 36rpx !important;
    border-radius: 28rpx !important;
    padding: 0 70rpx !important; /* 大屏幕增加内边距 */
    letter-spacing: 10rpx !important; /* 大屏幕增加字间距 */
    min-width: 320rpx !important;
  }
  
  .search-btn-wrapper .van-button__text {
    letter-spacing: 10rpx !important;
    padding: 0 24rpx !important;
  }
  
  .input-row {
    margin-bottom: 40rpx;
  }
  
  .search-btn-row {
    margin-top: 24rpx;
  }
}

/* 超大屏幕优化 */
@media (min-width: 768px) {
  .food-input {
    height: 108rpx;
    font-size: 36rpx;
    padding: 0 48rpx;
  }
  
  .search-btn-wrapper .van-button {
    height: 108rpx !important;
    font-size: 38rpx !important;
    border-radius: 32rpx !important;
    padding: 0 80rpx !important; /* 超大屏幕进一步增加内边距 */
    letter-spacing: 12rpx !important; /* 超大屏幕增加字间距 */
    min-width: 360rpx !important;
  }
  
  .search-btn-wrapper .van-button__text {
    letter-spacing: 12rpx !important;
    padding: 0 28rpx !important;
  }
}

/* 食物重量样式 */
.food-weight {
  font-size: 28rpx;
  color: #666;
  background: #f0f9f4;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  margin-left: 16rpx;
  border: 1rpx solid #07c160;
}

/* 更多营养信息提示 */
.more-nutrition-hint {
  grid-column: 1 / -1;
  text-align: center;
  padding: 16rpx;
  margin-top: 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx dashed #e0e0e0;
}

.hint-text {
  font-size: 24rpx;
  color: #999;
}

/* 分区标题样式 */
.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-left: 12rpx;
}

/* 优化食物名称行布局 */
.food-name-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
  gap: 12rpx;
}

.food-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  flex: 1;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 响应式调整食物名称行 */
@media (max-width: 375px) {
  .food-name {
    font-size: 32rpx;
  }
  
  .food-weight {
    font-size: 24rpx;
    padding: 6rpx 12rpx;
  }
}

@media (min-width: 414px) {
  .food-name {
    font-size: 38rpx;
  }
  
  .food-weight {
    font-size: 30rpx;
    padding: 10rpx 20rpx;
  }
}

/* 用户状态区域样式 */
.user-status-section {
  padding: 0 40rpx;
  margin-top: -20rpx;
  margin-bottom: 40rpx;
}

.user-status-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.user-info-row {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2rpx solid #07c160;
}

.user-details {
  flex: 1;
}

.user-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-right: 12rpx;
}

.status-tag {
  border-radius: 12rpx !important;
  padding: 4rpx 12rpx !important;
}

.user-status-text {
  font-size: 24rpx;
  color: #666;
}

.user-actions {
  margin-left: auto;
}

.user-action-btn {
  border-radius: 16rpx !important;
  padding: 0 24rpx !important;
  height: 56rpx !important;
}

.usage-stats {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.usage-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.usage-item:last-child {
  margin-bottom: 0;
}

.usage-label {
  font-size: 28rpx;
  color: #333;
  margin-left: 12rpx;
  margin-right: auto;
}

.usage-count {
  font-size: 28rpx;
  font-weight: 600;
  color: #07c160;
  margin-right: 12rpx;
}

.usage-remaining {
  font-size: 24rpx;
  color: #07c160;
  background: #f0f9f4;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.usage-remaining.zero {
  color: #ff976a;
  background: #fff2f0;
}

.guest-notice {
  background: #fff2f0;
  border: 1rpx solid #ff976a;
  border-radius: 12rpx;
  padding: 16rpx;
  display: flex;
  align-items: center;
}

.notice-text {
  font-size: 24rpx;
  color: #ff976a;
  margin-left: 8rpx;
  line-height: 1.4;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .user-status-section {
    padding: 0 32rpx;
  }
  
  .user-status-card {
    padding: 24rpx;
  }
  
  .user-avatar {
    width: 70rpx;
    height: 70rpx;
  }
  
  .user-name {
    font-size: 28rpx;
  }
  
  .usage-label,
  .usage-count {
    font-size: 24rpx;
  }
}

@media (min-width: 414px) {
  .user-avatar {
    width: 90rpx;
    height: 90rpx;
  }
  
  .user-name {
    font-size: 34rpx;
  }
  
  .usage-label,
  .usage-count {
    font-size: 30rpx;
  }
}